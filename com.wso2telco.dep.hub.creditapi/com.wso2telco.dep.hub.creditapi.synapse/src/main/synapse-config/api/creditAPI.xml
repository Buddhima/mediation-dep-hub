<?xml version="1.0" encoding="UTF-8"?>
<api context="/credit" name="creditAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" uri-template="/v1/credit/{+msisdn}/apply">
        <inSequence>
			<sequence key="com.wso2telco.dep.hub.creditapi.resource.apply.in.Sequence"/>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <sequence key="com.wso2telco.dep.common.response.unexpectedError.Sequence"/>
        </faultSequence>
    </resource>
    <resource methods="POST" uri-template="/v1/credit/{+msisdn}/refund">
        <inSequence>
			<sequence key="com.wso2telco.dep.hub.creditapi.resource.refund.in.Sequence"/>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <sequence key="com.wso2telco.dep.common.response.unexpectedError.Sequence"/>
        </faultSequence>
    </resource>
	<resource methods="POST" uri-template="/v1/creditnotification/{notifyURLId}">
	  <inSequence>
	    <sequence key="com.wso2telco.dep.hub.creditapi.resource.notification.Sequence"/>
	  </inSequence>
	  <outSequence/>
	  <faultSequence>
	    <sequence key="com.wso2telco.dep.common.response.unexpectedError.Sequence"/>
	  </faultSequence>
	</resource>    
</api>
