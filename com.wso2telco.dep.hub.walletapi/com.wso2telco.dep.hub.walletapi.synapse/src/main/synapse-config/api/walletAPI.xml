      <sequence key="com.wso2telco.dep.hub.walletapi.handle.refund.recaller.Sequence"/>
    </inSequence>
    <outSequence/>
    <faultSequence/>
  </resource>
  <resource methods="GET" protocol="http" uri-template="/{endUserId}/balance">
    <inSequence>
      <sequence key="com.wso2telco.dep.hub.walletapi.handle.balance.Sequence"/>
    </inSequence>
    <outSequence/>
    <faultSequence/>
  </resource>
  <resource methods="GET" protocol="http" uri-template="/{endUserId}/balance/{requestId}">
    <inSequence>
      <sequence key="com.wso2telco.dep.hub.walletapi.handle.balance.recaller.Sequence"/>
    </inSequence>
    <outSequence/>
    <faultSequence/>
  </resource>
</api>
