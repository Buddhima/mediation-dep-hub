      <sequence key="com.wso2telco.dep.hub.walletapi.handle.listing.Sequence"/>
    </inSequence>
    <outSequence/>
    <faultSequence/>
  </resource>
  <resource methods="GET" protocol="http" uri-template="/{endUserId}/list/{requestId}">
