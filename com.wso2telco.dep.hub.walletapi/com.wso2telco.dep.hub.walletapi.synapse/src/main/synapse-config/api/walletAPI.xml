      <sequence key="com.wso2telco.dep.hub.walletapi.handle.listing.recaller.Sequence"/>
    </inSequence>
    <outSequence/>
    <faultSequence/>
  </resource>
  <resource methods="POST" protocol="http" uri-template="/{endUserId}/refund">
